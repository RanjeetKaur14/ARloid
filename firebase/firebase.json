{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/upload",
        "destination": "/upload.html"
      },
      {
        "source": "/view",
        "destination": "/view.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}

